\m abre frijil
\g 
\l habre frijil.

\t tche' taq
\m t-che' taq
\g 
\l Decían ellos.

\t cha'.
\m cha'
\g 
\l Dece.

\t Ree biyeen xta' jcholajl,
\m r-ee biyeen x-ta' j-cholaj-l
\g 
\l Él oyó bien la manera.

\t xkaj ne' grabar,
\m x-ka-j ne' grabar
\g 
\l Lo grabó.

\t cha'.
\m cha'
\g 
